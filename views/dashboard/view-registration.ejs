<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
</head>
<body>

    <%- include('header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
            <%- include('leftmenu.ejs') %>
            </div>

            <div class="col-10">

                <% if(regdata.length>0){ %>
                <table class="table table-bordered table-sm">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Confirm Password</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% for(var i=0; i<regdata.length; i++){%>
                        <tr>
                            <td><%= regdata[i].name %></td>
                            <td><%= regdata[i].email %></td>
                            <td><%= regdata[i].password %></td>
                            <td><%= regdata[i].confirm_password %></td>
                            <td><a class="btn btn-outline-primary" href="/update_registrations/<%= regdata[i].id %>">Update</a>
                            <a class="btn btn-outline-primary" href="/delete-2/<%= regdata[i].id %>">Delete</a></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
                <% } else { %>
                    No Record Found
                <%} %>

            </div>

        </div>
    </div>

</body>
</html>